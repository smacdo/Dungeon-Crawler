<?xml version="1.0" encoding="UTF-8" ?>

<terraindata>
    <!-- ========================================================== -->
    <!--   Required "core" terrain types. These are hardcoded into  -->
    <!--   the game engine, and should never be removed. Modify     -->
    <!--   these values at your own risk                            -->
    <!-- ========================================================== -->
    <terrain id="0" name="void" sprite="...">
        <impassable />
        <empty />
    </terrain>

    <!-- ========================================================== -->
    <!--  Core built in terrain tiles (always required)             -->
    <!-- ========================================================== -->

    <!-- The void that surrounds a level and is impassable -->
    <terrain id="0" name="void">
        <display sprite="terrain_void" char="32" fgcolor="black"/>
        <impassable />
    </terrain>

    <!-- Granite is impossible to tunnel or dig through and is used to
         block player movement -->
    <terrain id="1" name="granite">
        <display sprite="terrain_granite" char="32" fgcolor="white" />
        <impassable />
    </terrain>

    <!-- ========================================================== -->
    <!--   Stone theme terrain tiles                                -->
    <!-- ========================================================== -->
    <terrain id="1000" name="stone_wall" type="wall">
        <display sprite="stone_wall" char="219" fg="white" bg="black" />
    </terrain>

    <terrain id="1001" name="stone_doorway" type="doorway">
        <display sprite="stone_doorframe" />
    </terrain>

    <terrain id="1500" name="stone_floor" type="floor">
        <display sprite="stone_floor" />
    </terrain>

</terraindata>
